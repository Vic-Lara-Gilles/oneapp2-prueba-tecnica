# Backend Service Environment Variables
# Copy this file to .env and adjust values as needed

# Database Configuration
# Docker/OrbStack (local development)
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/prueba_tecnica

# Node Environment
# Options: development, production, test
NODE_ENV=development

# API Configuration
# Port where the serverless offline will run
PORT=4001

# CORS Configuration
# Frontend URL allowed to make requests
CORS_ORIGIN=http://localhost:3000

# Optional: Connection Pool Configuration
# Maximum number of clients in the pool
DB_POOL_MAX=20
# Minimum number of clients in the pool
DB_POOL_MIN=5
# Close idle clients after milliseconds
DB_IDLE_TIMEOUT_MS=30000
# Return an error after milliseconds if connection could not be established
DB_CONNECTION_TIMEOUT_MS=2000
